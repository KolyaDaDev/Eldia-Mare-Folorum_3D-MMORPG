{
	"name": "eldiaapi",
	"version": "1.0.0",
	"description": "Backend for Eldia 3d MMORPG",
	"engines": {
		"node": "16.x"
	},
	"main": "server.js",
	"scripts": {
		"start": "node server.js",
		"server": "nodemon server.js",
		"socketServer": "nodemon socketServer.js",
		"client": "npm run start --prefix client",
		"clientinstall": "npm install --prefix client",
		"dev": "concurrently \"npm run server\"  \"npm run socketServer\" \"npm run client\"",
		"heroku-postbuild": "NPM_CONFIG_PRODUCTION=false npm install --prefix client && npm run build --prefix client"
	},
	"author": "nikodev",
	"license": "MIT",
	"dependencies": {
		"bcryptjs": "^2.4.3",
		"config": "^3.1.0",
		"express": "^4.16.4",
		"express-validator": "^6.14.0",
		"jsonwebtoken": "^8.5.1",
		"mongoose": "^6.2.4",
		"socket.io": "^4.5.1"
	},
	"devDependencies": {
		"concurrently": "^7.0.0",
		"nodemon": "^2.0.15"
	}
}
